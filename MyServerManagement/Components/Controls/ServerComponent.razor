@inject NavigationManager NavigationManager

@if(Server != null)
{
    <li @key="Server.ServerId">
        @Server.Name in @Server.City is
        <span style="color:@(Server.IsOnline ? "green" : "red")">
            @(Server.IsOnline ? "Online" : "Offline")
        </span>
        &nbsp;
            <button type="button" class="btn btn-link" @onclick="(() => { this.editingServer = !this.editingServer; })">Edit</button>
        <EditForm Model="Server"
                  FormName="@($"server-{Server.ServerId}")"
                  OnValidSubmit="@(()=>DeleteServer(Server.ServerId))">
            <button type="submit" class="btn btn-primary">Delete</button>
        </EditForm>

        @if (editingServer)
        {
            <MyServerManagement.Components.Pages.EditServer Id="this.Server.ServerId"></MyServerManagement.Components.Pages.EditServer>    
        }

    </li>
}

    @code {

    private bool editingServer = false;

    [Parameter]
    public Server? Server { get; set; } //= new Server { Name = "Server 1", City = "Toronto" };

    private void DeleteServer(int serverId)
    {
        if (serverId > 0)
        {
            ServersRepository.DeleteServer(serverId);
            NavigationManager.NavigateTo("/servers", true);
        }
    }
}
